<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:cardBackgroundColor="#f5f5f5"
        >

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_compare_arrows_white_24dp"
            android:layout_gravity="right"
            android:layout_marginVertical="12dp"
            android:layout_marginRight="16dp"
            android:background="@color/cardview_shadow_start_color"
            />

        <TextView
            android:id="@+id/TxtVu_TrnzDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="80dp"
            android:layout_marginVertical="16dp"
            android:text="تاریخ"
            android:textColor="#000000"
            android:textSize="10dp"
            />

        <TextView
            android:id="@+id/TxtVu_TrnzAmnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="80dp"
            android:layout_marginTop="32dp"
            android:gravity="end"
            android:text="مبلغ"
            android:textAlignment="viewEnd"
            android:textColor="#000000"
            android:textSize="18dp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/TxtVu_TrnzAccName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="80dp"
            android:layout_marginTop="56dp"
            android:text="از یا به حساب"
            android:textColor="#000000"
            android:textSize="12dp"
            />

        <TextView
            android:id="@+id/TxtVu_TrnzSource"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="80dp"
            android:layout_marginTop="72dp"
            android:text="به یا از کسی"
            android:textColor="#000000"
            android:textSize="12dp"
            />
        <TextView
            android:id="@+id/TxtVu_TrnzDescribe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="80dp"
            android:layout_marginTop="88dp"
            android:text="توضیحات"
            android:textColor="#000000"
            android:textSize="12dp"
            />

        <ImageView
            android:id="@+id/del_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_delete_black_24dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="16dp"
            />

        <ImageView
            android:id="@+id/edit_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_edit_black_24dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="56dp"
            android:layout_marginBottom="16dp"
            />



    </android.support.v7.widget.CardView>



</RelativeLayout>